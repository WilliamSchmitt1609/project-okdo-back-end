{% extends "back/navbar.html.twig" %}

<title>Genre index</title>

{% block body %}
    <h1>Genre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.label }}</td>
                <td>{{ genre.value }}</td>
                <td>
                    <a href="{{ path('back_genre_show', {'id': genre.id}) }}">show</a>
                    <a href="{{ path('back_genre_edit', {'id': genre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('back_genre_new') }}">Create new</a>
{% endblock %}
