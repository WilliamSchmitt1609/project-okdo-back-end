{% extends "back/navbar.html.twig" %}

<title>Age index</title>

{% block body %}
    <h1>Age index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for age in ages %}
            <tr>
                <td>{{ age.id }}</td>
                <td>{{ age.label }}</td>
                <td>{{ age.value }}</td>
                <td>
                    <a href="{{ path('back_age_show', {'id': age.id}) }}">show</a>
                    <a href="{{ path('back_age_edit', {'id': age.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('back_age_new') }}">Create new</a>
{% endblock %}
