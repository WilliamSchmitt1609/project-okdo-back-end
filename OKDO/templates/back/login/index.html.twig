{% extends 'back/base.html.twig' %}


{% block body %}

<div class="container pt-5">
    <div class="flex row mb-2">
        <div class="col">

            <h1 class="text-center m-8 font-semibold text-slate-900" >Connexion</h1>

            {% if error %}
            <div class="alert alert-danger" role="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
            {% endif %}

            <form action="{{ path('login_index') }} " method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Email</label>
                    <input class="focus:ring-2 focus:ring-blue-500 focus:outline-none appearance-none w-full text-sm leading-6 text-slate-900 placeholder-slate-400 rounded-md py-2 pl-10 ring-1 ring-slate-200 shadow-sm" type="email" class="form-control" id="username" name="_username" value="{{ last_username }}">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input class="focus:ring-2 focus:ring-blue-500 focus:outline-none appearance-none w-full text-sm leading-6 text-slate-900 placeholder-slate-400 rounded-md py-2 pl-10 ring-1 ring-slate-200 shadow-sm" type="password" class="form-control" id="password" name="_password">
                </div>
                <div class="flex flex-col justify-center">
                <button class="justify-self-center px-4 py-2 bg-indigo-200 border border-b-4 border-r-2 border-indigo-400 rounded-sm text-gray-800 font-semibold text-sm uppercase" type="submit" class="btn btn-primary">Se connecter</button>
                </div>
            </form>

        </div>
    </div>
</div>

{% endblock %}
