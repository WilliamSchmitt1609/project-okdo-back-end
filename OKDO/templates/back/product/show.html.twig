<!DOCTYPE html>

<title>Product</title>

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ product.picture }}</td>
            </tr>
            <tr>
                <th>ShoppingLink</th>
                <td>{{ product.shoppingLink }}</td>
            </tr>
            <tr>
                <th>AgeRange</th>
                <td>{{ product.ageRange }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ product.gender }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ product.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('back_product_index') }}">back to list</a>

    <a href="{{ path('back_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('back/product/_delete_form.html.twig') }}
{% endblock %}
