<!DOCTYPE html>

<title>Event index</title>

{% block body %}
    <h1>Event index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.label }}</td>
                <td>
                    <a href="{{ path('back_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('back_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('back_event_new') }}">Create new</a>
{% endblock %}
